<?php if ($block->shouldRenderQuantity()): ?>
	<script type="text/javascript">
		function plusQty(qtyInput){
			require([
			'jquery'
			], function(jQuery){
				(function($) {
					if($('#'+qtyInput).attr('disabled')!='disabled'){
						qty = $('#'+qtyInput).attr('value');
						qty = parseInt(qty);
						qty += 1 * <?= $qtyInc ?>;
						$('#'+qtyInput).val(qty);
						$('#sticky_qty').val(qty);
					}
				})(jQuery);
			});
			
		}
		function minusQty(qtyInput){
			require([
			'jquery'
			], function(jQuery){
				(function($) {
					if($('#'+qtyInput).attr('disabled')!='disabled'){
						qty = $('#'+qtyInput).attr('value');
						qty = parseInt(qty);
						
						if(qty>1){
                            qty -= 1 * <?= $qtyInc ?>;
							$('#'+qtyInput).val(qty);
                            $('#sticky_qty').val(qty);
						}
					}
				})(jQuery);
			});
		}
	</script>
<?php endif; ?>


